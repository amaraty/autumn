include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio Юсипов Марат
  body
    .wrapper
      .welcome-section
        section.hero
          .container.hero__container
            header.hero__header
              .hero__logo
                .logo МЮ
              .hero__menu
                - var menu = ["Главаная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                nav.menu
                  ul.menu__items
                    each item in menu
                      li.menu__item
                        a.menu__link #{item}
              .hero__links
                - var icons = ["insta", "vk", "github"];
                ul.socials
                  each item in icons
                    li.socials__item
                      a.socials__link
                        +icon(item, "socials__icon")

            .hero__content
              .user-info
                .user-info__desc Личный сайт веб разработчика
                .user-info__username Марат Юсипов
            .hero__buttons
              a.scroll-btn Скролл
                .scroll__icon
                  +icon("scroll")
        section.about
          .container
            .about__container
              .about__left
                .user
                  .user__avatar
                    .avatar
                      +image("content/metome.jpg", "user pic", "avatar__image")
                  .user__text
                    -
                      var rows = [
                        ["Проживаю:", "Москва"],
                        ["Возраст:", "33 года"],
                        ["Родился:", "12 октября 1986"]
                      ];

                    table.user__data
                      table.user__data-table
                        each row in rows
                          tr.user__data-row
                            each cell in row
                              td #{cell}


              .about__right
                .about__welcome-text Привет, меня зовут
                .about__username Марат Юсипов
                .about__desc
                  | Я занимаюсь разработкой современных сайтов и приложений.
                  br
                  | Мне нравится делать интересные и современные проекты.
                .about__ps
      
      section.values
        .container
          .values__container
            .values__pic
              +image("content/hands2.png", "values pic", "values__image")
            .values__desc
              .values__title
                .values__title-text Чем я могу быть полезен вам
                .values__title-subtext
                  | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
              .values__content
                -
                  var items = [
                    ["Frontend", ["HTML5", "CSS3", "javaScript", "jQuery и Vue.js"]],
                    ["Workflow", ["GIT", "Terminal", "Gulp", "Webpack"]]
                  ]
                ul.skills-graphic
                  each row in items
                    li.skills-graphic__item
                      .skills-row
                        .skills-row__title #{row[0]}
                        .skills-row__content
                          ul.skills
                            each skill in row[1]
                              li.skills__item
                                .skill
                                  svg(viewBox="0 0 300 300").skill__circle-shape
                                    circle(cx="150" cy="150" r="135").skill__circle.skill__circle--under
                                    circle(cx="150" cy="150" r="135" stroke="url(#gradient)" transform='rotate(180 150 150)').skill__circle.skill__circle--above
                                    linearGradient(id="gradient" x1="0" y1="0" x2="100%" y2="0")
                                      stop(offset="0%" stop-color="#d0731b")
                                      stop(offset="100%" stop-color="#dc9322")
                                  .skill__title #{skill}


      section.works
        .container
          .works__title Мои Работы
          .works__content
            .slider
              .slider__display
                img.slider__display-pic
                .slider__display-thumbs
                  ul.slider-thumbs
                    li.slider-thumbs__item
                      a.slider-thumb__link
                        img.slider-thumb__pic
                .slider__buttons
                  a.direction-btn.direction-btn--next
                  a.direction-btn.direction-btn--prev

              .slider__info
                .slider__tags
                  ul.tags
                    li.tags__item HTML
                    li.tags__item CSS
                    li.tags__item javaScript
                .slider__info-text
                  h3.slider__info-title Сайт школы образования
                  .slider__info-desc
                    .slider__info-subtext Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                .slider__info-btns
                  a.iconed-link
                    .iconed-link-text Посмотреть сайт
                    .iconed-link__icon
                      +icon("link")

      section.feedback
        .container
          .feedback__container
            .feedback__head
              .feedback__title Что обо мне говорят
              .feedback__btns
                ul.feedback__buttons-list
                  li.feedback__buttons-item
                    .feedback__button.feedback__button--prev
                      +icon("arrow-down", "feedback__arrows")
                  li.feedback__buttons-item
                    .feedback__button.feedback__button--next
                      +icon("arrow-down", "feedback__arrows")
            .feedback__comment
              .comment
                ul.comment__list
                  li.comment__item
                    .comment__quote
                      +icon("quote", "comment__quote-icon")
                    .comment__desc
                      .comment__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!
                      .teacher
                        .teacher__avatar
                          +image("content/dima.png", "user pic", "teacher__image")
                        .teacher__info
                          .teacher__name Ковальчук Дмитрий
                          .teacher__proff Основатель Loftschool
                  li.comment__item
                    .comment__quote
                      +icon("quote", "comment__quote-icon")
                    .comment__desc
                      .comment__text Этот код выдержит любые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах.
                      .teacher
                        .teacher__avatar
                          +image("content/vova.png", "user pic", "teacher__image")
                        .teacher__info
                          .teacher__name Владимир Сабанцев
                          .teacher__proff Преподаватель
            .feedback__send
              .feedback__title Связаться со мной
              .form
                form.form__elem(method="POST")
                  .form__row
                    .form__column
                      label.form__block
                        .form__block-title Введите ваше имя
                        input.form__input(type="text" required)
                    .form__column
                      label.form__block
                        .form__block-title Введите ваш email
                        input.form__input(type="text" required)
                  .form__row
                    label.form__block
                      .form__block-title Сообшение к письму
                      textarea.form__input.form__input--textarea
                      .form__button
                        button.send__button(type="submit") Отправить   

      footer.footer
        .container.footer__container
          .footer__info
            .footer__year © 2020
            .footer__user
              .footer__user-username Марат Юсипов
              .footer__user-desc Личный сайт веб разработчика
          .footer__desc
            .footer__menu
              - var menu = ["Главаная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                nav.menu
                  ul.menu__items
                    each item in menu
                      li.menu__item
                        a.menu__link #{item}
            .footer__field
              .footer__field-info
                .footer__field-text Этот сайт создан в рамках обучения в школе онлайн образования LoftSchool
                .footer__field-links
                  - var icons = ["insta", "vk", "github"];
                  ul.socials
                    each item in icons
                      li.socials__item-footer
                        a.socials__link-footer
                          +icon(item, "socials__icon-footer")
              .citation
                .citation__text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                .citation__author Martin Golding

