include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio Юсипов Марат
  body
    .wrapper
      .welcome-section
        .parallax
          .parallax__layer(data-speed="0.1")
            img(src=require("images/content/hero-layer-1.png")).parallax__image
          .parallax__layer(data-speed="0.30")
            img(src=require("images/content/hero-layer-2.png")).parallax__image
          .parallax__layer(data-speed="0.16")
            img(src=require("images/content/hero-layer-3.png")).parallax__image
          .parallax__layer(data-speed="0.2")
            img(src=require("images/content/hero-layer-4.png")).parallax__image
          .parallax__layer(data-speed="0.23")
            img(src=require("images/content/hero-layer-5.png")).parallax__image
        section.hero
          
          .container.hero__container
            header.hero__header
              .hero__logo
                .logo МЮ
              .hero__menu
                - var menu = ["Главаная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                nav.menu
                  ul.menu__items
                    each item in menu
                      li.menu__item
                        a.menu__link #{item}
              .hero__links
                - var icons = ["insta", "vk", "github"];
                ul.socials
                  each item in icons
                    li.socials__item
                      a.socials__link
                        +icon(item, "socials__icon")
              .header__hamburger
            .hero__content
              .user-info
                .user-info__desc Личный сайт веб разработчика
                .user-info__username Марат Юсипов
            .hero__buttons
              a.scroll-btn Скролл
                .scroll__icon
                  +icon("scroll")
        section.about
          .container
            .about__container
              .about__left
                .user
                  .user__avatar
                    .avatar
                      +image("content/metome.jpg", "user pic", "avatar__image")
                  .user__text
                    -
                      var rows = [
                        ["Проживаю:", "Москва"],
                        ["Возраст:", "33 года"],
                        ["Родился:", "12 октября 1986"]
                      ];

                    table.user__table
                      each item in rows
                        tr
                          td.user__table-title #{item[0]}
                          td.user__table-content #{item[1]}


              .about__right
                .about__welcome-text Привет, меня зовут
                .about__username Марат Юсипов
                .about__desc
                  | Я занимаюсь разработкой современных сайтов и приложений.
                  br
                  | Мне нравится делать интересные и современные проекты.
                .about__ps
                  .ps__star
                    | *
                  .ps__text
                    | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
      section.values
        .container.values__container
            .values__wrapper
              .values__title
                .values__title-container
                  .values__title-text Чем я могу быть полезен вам
                  .values__title-subtext
                  p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
              .values__widget
                #skills-component


      section.works
        .container.works__container
          .works__title Мои Работы
          .works__content
            #slider-component
            

      section.feedback
        .container
          .feedback__container
            .feedback__head
              .feedback__title Что обо мне говорят
              .feedback__btns
                ul.feedback__buttons-list
                  li.feedback__buttons-item
                    .feedback__button.feedback__button--prev
                      +icon("arrow-down", "feedback__arrows")
                  li.feedback__buttons-item
                    .feedback__button.feedback__button--next
                      +icon("arrow-down", "feedback__arrows")
            .feedback__comment
              .comment
                ul.comment__list
                  li.comment__item
                    .comment__quote
                      +icon("quote", "comment__quote-icon")
                    .comment__desc
                      .comment__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!
                      .teacher
                        .teacher__avatar
                          +image("content/dima.png", "user pic", "teacher__image")
                        .teacher__info
                          .teacher__name Ковальчук Дмитрий
                          .teacher__proff Основатель Loftschool
                  li.comment__item
                    .comment__quote
                      +icon("quote", "comment__quote-icon")
                    .comment__desc
                      .comment__text Этот код выдержит любые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах.
                      .teacher
                        .teacher__avatar
                          +image("content/vova.png", "user pic", "teacher__image")
                        .teacher__info
                          .teacher__name Владимир Сабанцев
                          .teacher__proff Преподаватель
            .feedback__send
              .feedback__title Связаться со мной
              .form
                form.form__elem(method="POST")
                  .form__row
                    .form__column
                      label.form__block
                        .form__block-title Введите ваше имя
                        input.form__input(type="text" required placeholder="Ковальчук Дмитрий")
                    .form__column
                      label.form__block
                        .form__block-title Введите ваш email
                        input.form__input(type="text" required placeholder="loftschool@study.com")
                  .form__row
                    label.form__block
                      .form__block-title Сообщение к письму
                      textarea.form__input.form__input--textarea(placeholder="Требуется ваша помощь в создании сайта. Интересуют сроки и цена вопроса")
                      .form__button
                        button.send__button(type="submit") Отправить   

      footer.footer
        .container.footer__container
          .footer__info
            .footer__year © 2020
            .footer__user
              .footer__user-username Марат Юсипов
              .footer__user-desc Личный сайт веб разработчика
          .footer__desc
            .footer__menu
              - var menu = ["Главаная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                nav.menu
                  ul.menu__items
                    each item in menu
                      li.menu__item
                        a.menu__link #{item}
            .footer__field
              .footer__field-info
                .footer__field-text Этот сайт создан в рамках обучения в школе онлайн образования LoftSchool
                .footer__field-links
                  - var icons = ["insta", "vk", "github"];
                  ul.socials
                    each item in icons
                      li.socials__item-footer
                        a.socials__link-footer
                          +icon(item, "socials__icon-footer")
              .citation
                .citation__text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                .citation__author Martin Golding

    include ./templates/entry.pug