.skills {
    display: flex;
    justify-content: space-between;

    @include tablets() {
        justify-content: space-evenly;
    }

    &-graphic {
        width: 100%;
        display: flex;
        flex-direction: column;

        &__item {
            margin-bottom: 55px;

            &:last-child {
                margin-bottom: 0;
            }
        }
    }

    &-row {
        display: flex;
        flex-direction: column;

        &__title {
            color: #ffffff;
            font-family: "Open Sans";
            font-size: 24px;
            font-weight: 700;
            line-height: 48px;

            @include tablets() {
                text-align: center;
            }
        }

        &__content {
            margin-top: 40px;
        }
    }

    &__item {
        display: flex;
    }
}

.skill {
    position: relative;
    width: 134px;
    height: 134px;
    display: flex;
    justify-content: center;
    align-items: center;

    &__circle {
        fill:transparent;
    }

    &__circle-shape{
        position: absolute;
    }

    &__circle--under {
        stroke: #e9e9e9;
        stroke-width: 3px;
        opacity: 0.1;
    }

    &__circle--above {
        stroke-width: 20px;
        stroke-dasharray: 847;
        stroke-dashoffset: 565;
    }


    &__title {
        display: flex;
        position: absolute;
        text-align: center;
        opacity: 0.5;
        color: #ffffff;
        font-family: "Open Sans";
        font-size: 18px;
        font-weight: 700;
        line-height: 48px;
        text-transform: uppercase;
    }
}