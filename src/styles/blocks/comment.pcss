.comment {

    &__list {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    &__item {
        display: flex;
        flex-direction: row;
        width: 45%;
    }

    &__quote-icon {
        width: 86px;
        fill: #ffffff;
        opacity: 0.06;
    }

    &__text {
        opacity: 0.5;
        color: #ffffff;
        font-family: "Open Sans";
        font-size: 16px;
        font-weight: 400;
        line-height: 30px;
    }
}