.feedback {
    background: url('../images/content/bg-feedback.jpg') center center / cover no-repeat;
    min-height: 100vh;
    min-width: 650px;

    &__container {
        padding-top: 150px;
        display: flex;
        flex-direction: column;
        width: 80%;
        height: 100%;
    }

    &__head {
        z-index: 40;
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: 96px;

        @include phones() {
            flex-direction: column;
            margin-bottom: 48px;
        }
    }

    &__title {
        display: flex;
        color: #ffffff;
        font-family: "Open Sans";
        font-size: 33px;
        font-weight: 700;
        line-height: 48px;

        @include tablets {
            justify-content: center;
            font-size: 30px;
        }

        @include phones() {
            margin-right: 0;
            margin-bottom: 48px;
        }
    }

    &__btns {
        position: relative;
        margin-left: 12.5%;

        @include desktop {
            margin-left: 77px;
        }

        @include tablets {
            margin-left: 30px;
        }

        @include phones {
            margin-left: 0;
        }
    }
    
    &__buttons-list {
        display: flex;
        flex-direction: row;
    }

    &__buttons-item {
        margin-right: 20px;

        &:last-child{
            margin-right: 0;
        }
    }

    &__button {
        border: 1px solid #fff;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        border-radius: 50px;
        justify-content: center;

        &:hover {
            opacity: 0.4;
        }
    }

    &__button--prev {
        transform: rotate(180deg);
    }

    &__arrows {
        width: 9px;
        height: 9px;
        fill: #fff;
        display: flex;
    }

    &__comment {
        margin-bottom: 213px;
    }

    &__send {

        @include tablets {
            display: flex;
            flex-direction: column;
        }
    }
}